<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
	<div style="padding-left:40%">
			<h4 class="text-light blue">View Plan</h4>
		<g:FlowPanel ui:field="planTypePanel">
			<g:HTMLPanel>
				<div style="padding:4px">
					<g:Label styleName="centerPanelHeadings">Plan Type</g:Label>
				</div>
				<div style="padding-left:4px">
					<g:Label>User specific Plan Type Details here</g:Label>
				</div>
			</g:HTMLPanel>
		</g:FlowPanel>

		<g:FlowPanel ui:field="paymentDetailsPanel">
			<g:HTMLPanel>
				<div style="padding:4px">
					<g:Label styleName="centerPanelHeadings ">Payment Details</g:Label>
				</div>
				<div style="padding-left:4px">
					<g:FlowPanel ui:field="panelPaymentTerms"></g:FlowPanel>
					<g:Label ui:field="lblPaymentTerms" styleName="blue">Payment Terms</g:Label>
					<g:RadioButton ui:field="radioMonthlyPayments" name="paymentsGroup">Monthly</g:RadioButton>
					<g:RadioButton ui:field="radioQuarterlyPayments" name="paymentsGroup">Quarterly</g:RadioButton>
					<g:RadioButton ui:field="radioYearlyPayments" name="paymentsGroup">Yearly</g:RadioButton>

				</div>
			</g:HTMLPanel>
		</g:FlowPanel>

		

		<div style="padding:5px">
		<g:Button styleName="button primary" ui:field="btnUpdate" width="80px"> update </g:Button>
		</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 