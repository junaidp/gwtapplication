<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
	<body class="metro">
			<div style="padding-left:40%; padding-top:10%">
				<div class="padding20">
					<form>
						<h4 class="text-light blue">Forgot Password</h4>
						<div>
							<g:HTML ui:field="htmlError" styleName="error"></g:HTML>
						</div>
						<div>
							<span class="mif-user prepend-icon"></span>
							<g:TextBox ui:field="txtUserName" styleName="input-control text"
								text="" />
						</div>
						<div>
							<span class="mif-lock prepend-icon"></span>
							<g:TextBox ui:field="txtEmail" styleName="input-control text"></g:TextBox>
						</div>

						<div class="form-actions">
							<g:Button styleName="button primary" ui:field="btnSubmit">Send activation link</g:Button>

						</div>
					</form>
				</div>

			</div>
			
		</body>
	</g:HTMLPanel>
</ui:UiBinder> 