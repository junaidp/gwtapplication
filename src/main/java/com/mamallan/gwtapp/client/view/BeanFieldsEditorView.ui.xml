<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:com.mamallan.gwtapp.client.view.widgets">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>

		<div>
			<div
				style="float:left; padding:5px;background-color: #E8E8E8;box-shadow: 2px 2px 3px #C8C8C8;margin:10px;border-radius:5px;margin-left:28%;margin-top:10%">

				<div
					style="border:groove;border-color:white;padding:10px;border-radius:5px;
					height:150px">
					<div style="padding-bottom:5px;padding-left:25%">
						<g:Label styleName="blue"> upload your GWT Designer's Files </g:Label>
					</div>
					<div>
						<g:ListBox ui:field="listBeans"></g:ListBox>
					</div>
					<div>
						<div style="float:left">
							<g:Label styleName="blue" text="upload ui.xml file"></g:Label>
							<v:XmlComponentAttachment ui:field="xmlComponentAttachment"></v:XmlComponentAttachment>
						</div>
						<div style="float:left">
							<g:Label styleName="blue" text="upload corresponding java file"></g:Label>
							<v:JavaComponentAttachment ui:field="javaComponentAttachment"></v:JavaComponentAttachment>
						</div>

					</div>
					<div style="padding-left:35%;padding-top:12%">
						<g:Button ui:field="btnSubmit" styleName="button primary"
							height="25px" width="100px"> Submit </g:Button>
					</div>
				</div>
			</div>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 