<persistence 
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
    <persistence-unit name="data5PU">
        <!-- <provider>org.hibernate.ejb.HibernatePersistence</provider>-->
         <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.halcyonpro.gwtapp.shared.entity.UserEntity</class>
				<class>com.halcyonpro.gwtapp.shared.entity.MyAccountPreferencesEntity
				</class>
				<class>com.halcyonpro.gwtapp.shared.entity.GlobalPreferencesEntity
				</class>
				<class>com.halcyonpro.gwtapp.shared.entity.MyAccountEntity</class>
				<class>com.halcyonpro.gwtapp.shared.entity.BeanObjects</class>
        <properties>
            <property name="hibernate.show_sql" value="true" />
            <property name="javax.persistence.transactionType" value="RESOURCE_LOCAL" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/gwtapplication" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
        </properties>
    </persistence-unit>
</persistence>