<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:com.halcyonpro.gwtapp.client.view.widgets">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<div class="w3-container w3-theme-l2">
			<div style="float:left">
				<h5>Application's Logo </h5>
			</div>
			<div style="float:left">
				<g:Image ui:field="currentLogo" visible="false"></g:Image>
			</div>
		</div>
		<div style="float:left; padding-left:30px;padding-top:5px">
			<v:LogoAttachment ui:field="attachmentPanel"></v:LogoAttachment>
		</div>
		<div style="float:left; padding-left:100px;padding-top:30px">
			<g:Label text="Width"></g:Label>
			<g:TextBox ui:field="txtWidth" width="100px"></g:TextBox>
			<g:Label text="Height"></g:Label>
			<g:TextBox ui:field="txtHeight" width="100px"></g:TextBox>
		</div>


	</g:HTMLPanel>
</ui:UiBinder> 