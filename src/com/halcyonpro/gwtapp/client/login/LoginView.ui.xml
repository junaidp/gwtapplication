<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<head>
			<link href="Metro-UI-CSS-master/build/css/metro.css" rel="stylesheet" />
			<link href="Metro-UI-CSS-master/build/css/metro.min.css" rel="stylesheet" />
			<link href="Metro-UI-CSS-master/build/css/metro.responsive" rel="stylesheet" />
			<link href="Metro-UI-CSS-master/build/css/metro.schemes" rel="stylesheet" />
			<link href="Metro-UI-CSS-master/build/css/metro.icons" rel="stylesheet" />

			<script src="jquery.js"></script>
			<script src="Metro-UI-CSS-master/build/js/metro.js"></script>
		</head>
		<body class="metro">

			<div style="padding-left:25%; padding-top:5%">

				<div class="shadowDiv">
				
					<div style="paddi
					ng-left:35px">
						<h4 class="text-light blue">Sign In</h4>
						<form>

							<div>
								<g:Label ui:field="lblError" styleName="error"></g:Label>
							</div>
							<div>
								<g:TextBox ui:field="txtUserName" styleName="input-control text userIcon"
									text="user1" />
							</div>
							<div>
								<span class="mif-lock prepend-icon"></span>
								<g:PasswordTextBox ui:field="txtPassword"
									text="user1" styleName="input-control text passwordIcon" />
							</div>

							<div style="padding-left:40px">
								<g:Button styleName="button primary" ui:field="btnSubmit"
									width="120px">Login</g:Button>

							</div>
							<div style="padding-left:50px;padding-top:15px">
								<g:Anchor styleName="hover" ui:field="btnForgotPassword">Forgot Password</g:Anchor>
							</div>
							<div style="padding-left:50px;padding-top:5px">
								<g:Anchor styleName="hover" ui:field="btnForgotUsername">Forgot Username</g:Anchor>
							</div>
						</form>
					</div>
				</div>

			</div>
		</body>

	</g:HTMLPanel>

</ui:UiBinder> 