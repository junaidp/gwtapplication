<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
	<head>
			<link href="Metro-UI-CSS-master/build/css/metro.css" rel="stylesheet" />
		
		</head>
		<body class="metro">
			<div style="padding-left:40%; padding-top:15%">
				<div class="padding20">
					<form>
						<h4 class="text-light blue">Create New Password</h4>
						<div>
							<g:Label ui:field="lblError" styleName="error"></g:Label>
						</div>
						<div>
							<span class="mif-user prepend-icon"></span>
							<g:PasswordTextBox ui:field="txtNewPassword" styleName="input-control text inLine"	/>
							<g:Label styleName="inLine error" ui:field="newPasswordError"></g:Label>
						</div>
						<div>
							<span class="mif-lock prepend-icon"></span>
							<g:PasswordTextBox ui:field="txtConfirmPassword" styleName="input-control text inLine" />
							<g:Label styleName="inLine error inLine" ui:field="confirmPasswordError"></g:Label>
						</div>

						<div class="form-actions">
							<g:Button styleName="button primary" ui:field="btnSubmit">Change Password</g:Button>

						</div>
						
					</form>
				</div>

			</div>
		</body>

	</g:HTMLPanel>

</ui:UiBinder> 